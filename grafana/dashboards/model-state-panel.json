{
  "id": 3,
  "title": "Model State",
  "type": "table",
  "gridPos": {
    "h": 6,
    "w": 12,
    "x": 0,
    "y": 16
  },
  "targets": [
    {
      "datasource": {
        "type": "postgres",
        "uid": "PostgreSQL"
      },
      "editorMode": "code",
      "format": "table",
      "rawQuery": true,
      "rawSql": "SELECT\n    version as active_model_version,\n    strategy_id,\n    is_warmup_mode as warmup_mode_status,\n    trained_at,\n    CASE \n        WHEN is_active = true THEN 'active'\n        ELSE 'inactive'\n    END as training_status\nFROM model_versions\nWHERE is_active = true\nORDER BY trained_at DESC;",
      "refId": "A"
    }
  ],
  "options": {
    "showHeader": true,
    "sortBy": [
      {
        "desc": true,
        "displayName": "trained_at"
      }
    ]
  },
  "fieldConfig": {
    "defaults": {
      "custom": {
        "align": "auto",
        "displayMode": "auto"
      },
      "mappings": [],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {
            "color": "green",
            "value": null
          }
        ]
      }
    },
    "overrides": [
      {
        "matcher": {
          "id": "byName",
          "options": "training_status"
        },
        "properties": [
          {
            "id": "mappings",
            "value": [
              {
                "options": {
                  "active": {
                    "color": "green",
                    "index": 0,
                    "text": "Active"
                  },
                  "inactive": {
                    "color": "gray",
                    "index": 1,
                    "text": "Inactive"
                  }
                },
                "type": "value"
              }
            ]
          }
        ]
      },
      {
        "matcher": {
          "id": "byName",
          "options": "warmup_mode_status"
        },
        "properties": [
          {
            "id": "mappings",
            "value": [
              {
                "options": {
                  "false": {
                    "color": "green",
                    "index": 0,
                    "text": "No"
                  },
                  "true": {
                    "color": "yellow",
                    "index": 1,
                    "text": "Yes"
                  }
                },
                "type": "value"
              }
            ]
          }
        ]
      },
      {
        "matcher": {
          "id": "byName",
          "options": "trained_at"
        },
        "properties": [
          {
            "id": "unit",
            "value": "dateTimeFromNow"
          }
        ]
      }
    ]
  },
  "maxDataPoints": 100,
  "interval": "60s"
}

