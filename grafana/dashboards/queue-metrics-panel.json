{
  "id": 5,
  "title": "Queue Metrics",
  "type": "table",
  "gridPos": {
    "h": 6,
    "w": 24,
    "x": 0,
    "y": 22
  },
  "targets": [
    {
      "datasource": {
        "type": "infinity",
        "uid": "RabbitMQ HTTP API"
      },
      "format": "table",
      "type": "json",
      "parser": "json",
      "url": "/api/queues",
      "root_selector": "$",
      "columns": [
        {
          "text": "queue_name",
          "selector": "$.name",
          "type": "string"
        },
        {
          "text": "queue_length",
          "selector": "$.messages",
          "type": "number"
        },
        {
          "text": "message_publish_rate",
          "selector": "$.message_stats.publish_details.rate",
          "type": "number"
        },
        {
          "text": "message_consume_rate",
          "selector": "$.message_stats.ack_details.rate",
          "type": "number"
        },
        {
          "text": "consumer_count",
          "selector": "$.consumers",
          "type": "number"
        }
      ],
      "refId": "A"
    }
  ],
  "transformations": [
    {
      "id": "organize",
      "options": {
        "excludeByName": {},
        "indexByName": {},
        "renameByName": {
          "queue_length": "Queue Length",
          "message_publish_rate": "Publish Rate",
          "message_consume_rate": "Consume Rate",
          "consumer_count": "Consumers",
          "queue_name": "Queue Name"
        }
      }
    },
    {
      "id": "calculateField",
      "options": {
        "mode": "binary",
        "binary": {
          "left": "queue_length",
          "operator": ">",
          "reducer": "sum",
          "right": "1000"
        },
        "alias": "lag_detected"
      }
    }
  ],
  "options": {
    "showHeader": true,
    "sortBy": [
      {
        "desc": true,
        "displayName": "queue_length"
      }
    ]
  },
  "fieldConfig": {
    "defaults": {
      "custom": {
        "align": "auto",
        "displayMode": "auto"
      },
      "mappings": [],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {
            "color": "green",
            "value": null
          }
        ]
      }
    },
    "overrides": [
      {
        "matcher": {
          "id": "byName",
          "options": "lag_detected"
        },
        "properties": [
          {
            "id": "mappings",
            "value": [
              {
                "options": {
                  "Yes": {
                    "color": "red",
                    "index": 0,
                    "text": "Yes"
                  },
                  "No": {
                    "color": "green",
                    "index": 1,
                    "text": "No"
                  }
                },
                "type": "value"
              }
            ]
          }
        ]
      },
      {
        "matcher": {
          "id": "byName",
          "options": "queue_length"
        },
        "properties": [
          {
            "id": "unit",
            "value": "short"
          },
          {
            "id": "thresholds",
            "value": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 1000
                }
              ]
            }
          }
        ]
      },
      {
        "matcher": {
          "id": "byName",
          "options": "message_publish_rate"
        },
        "properties": [
          {
            "id": "unit",
            "value": "ops"
          },
          {
            "id": "decimals",
            "value": 2
          }
        ]
      },
      {
        "matcher": {
          "id": "byName",
          "options": "message_consume_rate"
        },
        "properties": [
          {
            "id": "unit",
            "value": "ops"
          },
          {
            "id": "decimals",
            "value": 2
          }
        ]
      }
    ]
  },
  "maxDataPoints": 100,
  "interval": "60s"
}

