    {
      "id": 1,
      "title": "Trading Flow: Signal → Order → Position",
      "type": "table",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "postgres",
