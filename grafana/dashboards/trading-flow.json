      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "PostgreSQL"
          },
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT \n    -- Signal данные\n    LEFT(s.signal_id::text, 8) as signal_guid,\n    s.timestamp as signal_time,\n    s.asset,\n    INITCAP(s.side) as signal_side,\n    s.price as signal_price,\n    COALESCE(sor.allocation_amount, 0) as signal_amount_usdt,\n    COALESCE(s.confidence * 100, 0) as signal_confidence_pct,\n    \n    -- Order данные (может быть NULL)\n    COALESCE(LEFT(o.order_id, 8), 'N/A') as order_guid,\n    COALESCE(o.quantity, 0) as order_quantity,\n    CASE \n        WHEN o.order_type = 'Market' THEN 'Market'\n        WHEN o.price IS NOT NULL THEN o.price::text\n        ELSE 'N/A'\n    END as order_price,\n    COALESCE(o.order_type, 'N/A') as order_type,\n    COALESCE(o.status, 'N/A') as order_status,\n    COALESCE(o.rejection_reason, '') as order_reason,\n    COALESCE(o.filled_quantity, 0) as filled_quantity,\n    COALESCE(o.average_price, 0) as average_price,\n    \n    -- Position данные (может быть NULL)\n    CASE \n        WHEN p.closed_at IS NOT NULL THEN 'Closed'\n        WHEN p.id IS NOT NULL THEN 'Open'\n        ELSE 'N/A'\n    END as position_status,\n    COALESCE(p.size, 0) as position_size,\n    CASE \n        WHEN p.closed_at IS NOT NULL THEN 'Closed'\n        WHEN o.status = 'cancelled' THEN 'Order cancelled'\n        WHEN o.status = 'rejected' THEN CONCAT('Order rejected', \n            CASE WHEN o.rejection_reason IS NOT NULL AND o.rejection_reason != '' \n                THEN CONCAT(': ', o.rejection_reason) \n                ELSE '' \n            END)\n        WHEN o.id IS NULL THEN 'No order created'\n        WHEN o.status IS NOT NULL AND o.status NOT IN ('filled', 'partially_filled') THEN 'Order not filled'\n        WHEN p.id IS NULL AND o.id IS NOT NULL AND o.status IN ('filled', 'partially_filled') THEN 'No position'\n        ELSE ''\n    END as position_reason,\n    \n    -- PnL\n    CASE \n        WHEN p.closed_at IS NOT NULL THEN COALESCE(p.realized_pnl, 0)\n        WHEN p.id IS NOT NULL THEN COALESCE(p.unrealized_pnl, 0)\n        ELSE 0\n    END as current_pnl\n\nFROM trading_signals s\nLEFT JOIN signal_order_relationships sor ON s.signal_id = sor.signal_id\nLEFT JOIN orders o ON sor.order_id = o.id\nLEFT JOIN positions p ON o.asset = p.asset \n    AND CASE \n        WHEN o.side = 'Buy' THEN p.size > 0 \n        WHEN o.side = 'SELL' THEN p.size < 0 \n        ELSE false\n    END\n    AND p.mode = 'one-way'\n    AND o.id IS NOT NULL\nWHERE $__timeFilter(s.timestamp)\nORDER BY s.timestamp DESC, o.created_at DESC NULLS LAST\nLIMIT 30;",
          "refId": "A"
        }
