          },
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT\n    all_assets.asset,\n    COALESCE(p.size, 0) as current_position_size,\n    2.0 as max_position_limit,\n    2.0 - ABS(COALESCE(p.size, 0)) as available_limit,\n    CASE\n        WHEN ABS(COALESCE(p.size, 0)) >= 2.0 THEN 'Limit Exceeded'\n        WHEN ABS(COALESCE(p.size, 0)) >= 1.8 THEN 'Near Limit'\n        WHEN ABS(COALESCE(p.size, 0)) > 0 THEN 'Has Position'\n        ELSE 'Available'\n    END as status\nFROM (\n    SELECT DISTINCT asset FROM positions WHERE asset IS NOT NULL\n    UNION\n    SELECT DISTINCT asset FROM trading_signals WHERE timestamp > NOW() - INTERVAL '24 hours' AND asset IS NOT NULL\n) all_assets\nLEFT JOIN positions p ON all_assets.asset = p.asset AND p.closed_at IS NULL\nWHERE all_assets.asset IS NOT NULL\nORDER BY all_assets.asset;",
          "refId": "A"
        }
